@{
    ViewData["Title"] = "ManualWithSeparateHandlers";
}

<h1>ManualWithSeparateHandlers</h1>
<div class="calculations">
    <form method='post'>
        <input type='number' name='FirstValue'/><br>
        <select name="operation">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select><br>
        <input type='number' name='SecondValue'/><br>
        <input type='submit' value='Submit'/>
    </form>
</div>